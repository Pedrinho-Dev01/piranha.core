@page "/manager/workflows/others"
@model Piranha.Manager.Models.WorkflowsOthersViewModel
@attribute [Area("Manager")]

@using Piranha.Manager.Localization
@inject ManagerLocalizer Localizer

@{
    Layout = "_Layout";
    ViewBag.MenuItem = "WorkflowsOthers";
    ViewBag.Title = Localizer.Menu["Published Content"] ?? "Published Content";
}

<div class="top">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Localizer.Menu["Content"]</li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
        </ol>
    </nav>

    <div class="container-fluid">
        <div class="top-nav">
            @* Reaproveita as ações da toolbar de páginas, se configuradas *@
            @foreach (var action in Piranha.Manager.Actions.Toolbars.PageList)
            {
                <partial name="@action.ActionView" />
            }
        </div>
    </div>
</div>

<div class="container-fluid app">
    <div class="row">
        <div class="col">
            <table id="othersTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>@Localizer.Content["Title"]</th>
                        <th>@Localizer.Content["Type"]</th>
                        <th>@Localizer.Content["Author"]</th>
                        <th>@Localizer.Content["Publication Date"]</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section script {
    <script src="~/manager/assets/js/piranha.workflow.js"></script>
    <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', () => {
            piranha.workflow.initOthersPage();
        });
    </script>
}
